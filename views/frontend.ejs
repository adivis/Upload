<body class="center">
  
  <%if (records.length>0){%>
    <a class="goupload" href="/upload">Upload more</a>
    <div id="carouselExampleControls" class="carousel slide w-50" data-interval="false">
  <div class="carousel-inner">
      <div class="carousel-item active" >
          <form action="/deleteImg" method="POST" class="form1" enctype="multipart/form-data">
              <img class="d-block w-100" src="uploads/<%= records[0].imagename %>" alt=" slide">
              <p class="inputtxt"><%=records[0].textcontent %></p>
              <input type="text" name="uploadimg" value="<%=records[0].textcontent%>" class="inputtxt notShow">
              <input type="text" name="uploadimg" value="<%=records[0].imagename%>" class="notShow">
              <input type="submit" value="Delete" class="btn-light">
              <details style="text-align: center;">
                <summary style="color: white;">Edit</summary>

              
                
                      <div class="custom-file mb-2">
                          <input type="file" name="file" id="file" class="file-input fileinput">
                          <label for="file" class="file-input"></label>
                      </div>
                      <div class="custom-file mb-2">
                          <label for="text" class="text-input">Enter text</label>
                          <input type="text" name="file" id="text" class="text-input" style="width: 85%;">
                      </div>
                   
                    
                    <input type="submit" value="Edit" class="btn-light" id="editbtn" formaction="/editImg">
                  </details>
                  </form>
            
      </div>
      <% records.forEach(function(row){ if(records[0].imagename!==row.imagename){%>
        <div class="carousel-item">
            <form action="/deleteImg" method="POST" class="form1" enctype="multipart/form-data">
                <img class="d-block w-100" src="uploads/<%= row.imagename %>" alt="First slide" >
                <p class="inputtxt"><%=row.textcontent %></p>
                <input type="text" name="uploadimg" value="<%=row.textcontent%>" class="inputtxt notShow">
                <input type="text" name="uploadimg" value="<%=row.imagename%>" class="notShow">
                <input type="submit" value="Delete" class="btn-light">
                  
                <details style="text-align: center;">
                  <summary style="color: white;">Edit</summary>
                  
                        <div class="custom-file mb-2">
                            <input type="file" name="file" id="file" class="file-input fileinput">
                            <label for="file" class="file-input"></label>
                        </div>
                        <div class="custom-file mb-2">
                            <label for="text" class="text-input">Enter text</label>
                            <input type="text" name="file" id="text" class="text-input" style="width: 85%;">
                        </div>
                        <input type="submit" value="Edit" class="btn-light" id="editbtn" onclick="showoption()"  formaction="/editImg">
                      </details>
              </form>
            </div>
   
         
          <%}})%>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <%}else{%>
  <a class="goback" href="/upload">Go back</a>
